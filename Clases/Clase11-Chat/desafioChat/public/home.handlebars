

{{#if show }}
    <h1>Listado de Productos Random</h1>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Price</th>
                <th scope="col">Thumbnail</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
            <tr> 
                <th>{{this.nombre}}</th>
                <th>{{this.precio}}</th>
                <th>{{this.foto}}</th>
            </tr>
            {{/each}}
        </tbody>
    {{else}}
    <div class="container">
        <h1>Agregar un Producto</h1>
        <div class="container mt-5">
            <div class="form-group">
                <label for="title">Title</label>
                <input class="form-control" type="text" name="title" id="title">
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" type="number" name="price" id="price">
            </div>
            <div class="form-group">
                <label for="thumbnail">Thumbnail</label>
                <input class="form-control" type="text" name="thumbnail" id="thumbnail">
            </div>
            <button id="btnAgregar" class="btn btn-primary">Agregar</button>
        </div>
    </div>
    <div class="container mt-5">
        <h1>Listado de Productos</h1>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Thumbnail</th>
                </tr>
            </thead>
            <tbody id='contenedorProductos'>
            </tbody>
        </table>

    </div>

    <div class="container">
        <h1>Chat de la Aplicacion</h1>
        <div id="usuario"></div>
        <div id="conectados"></div>
        <div class="userMail" id="contenedorMail">
            <input type="text" class="form-control" id="mail" />
            <button class="btn btn-primary" id="btnMail">Guardar Mail</button>
            <div class="alert alert-primary" role="alert" id="msg"></div>
        </div>
        <div class="mb-3" id="mensajesGlobales">
            <label for="chat" class="form-label">Chat</label>
            <input type="text" class="form-control" id="texto" />
            <button class="btn btn-primary" id="btn">Enviar Mensaje</button>
        </div>
        <div id="chat"></div>
    </div>
{{/if}}

